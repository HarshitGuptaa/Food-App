extends base.pug

append links 
 link(rel='stylesheet' href='./css/login.css')

block content
 .form
  .form-toggle
  .form-panel.one
    .form-header
      h1 Sign Up
    .form-content
      form
        .form-group
          label(for='name') Name
          input(type='text'
                id='name'
                name='name'
                required)
        .form-group
          label(for='email') Email
          input(type='email'
                id='email'
                name='email'
                required)
        .form-group
          label(for='password') Password
          input(type='password'
                id='password'
                name='password'
                required)
        .form-group
          label(for='confirmpw') Confirm Password
          input(type='password'
                id='confirmpw'
                name='confirmpw'
                required)
        
        .form-group
          button(type='submit' id='submit') Submit
